<h3 class="header" >{{numAnswers}} Answers:</h3>

    {{#each model.answers as |answer|}}
    <div class="answerItem row">
      <div class="animalAvatarDiv two columns">
        <img src={{answer.avatar}}>
      </div>
      <div class="answerDiv eight columns">
        <p class="date">{{answer.date}}</p>
        <p><strong>{{answer.content}}</strong></p>
      </div>

      <div class="linkDiv2 two columns answerTrash">
        <i {{action 'deleteAnswer' answer}} class="fa fa-trash-o" aria-hidden="true"></i>
      </div>
    </div>
    {{/each}}


  <div class="addNewAnswer">
    {{answer-new question=model saveAnswer="saveAnswer"}}
  </div>
