{{#if updateQuestionForm}}
  <form class="updateQuestionForm">

    <div class="row">
      <span class="one columns">&nbsp;</span>
      <label class="ten columns" for="author">Name</label>
      <span class="one columns">&nbsp;</span>
    </div>

    <div class="row">
      <span class="one columns">&nbsp;</span>
      {{input class="ten columns" value=author id="author" placeholder=question.author}}
      <span class="one columns">&nbsp;</span>
    </div>

    <div class="row">
      <span class="one columns">&nbsp;</span>
      <label class="ten columns" for="avatar">Profile Pic Url</label>
      <span class="one columns">&nbsp;</span>
    </div>

    <div class="row">
      <span class="one columns">&nbsp;</span>
      {{input class="ten columns" value=avatar id="avatar" placeholder=question.avatar}}
      <span class="one columns">&nbsp;</span>
    </div>

    <div class="row">
      <span class="one columns">&nbsp;</span>
      <label class="ten columns" for="date">Date</label>
      <span class="one columns">&nbsp;</span>
    </div>

    <div class="row">
      <span class="one columns">&nbsp;</span>
      {{input class="ten columns" value=date id="date" placeholder=question.date}}
      <span class="one columns">&nbsp;</span>
    </div>

    <div class="row">
      <span class="one columns">&nbsp;</span>
      <label class="ten columns" for="question">Question:</label>
      <span class="one columns">&nbsp;</span>
    </div>

    <div class="row">
      <span class="one columns">&nbsp;</span>
      {{textarea class="ten columns" value=question id="question" placeholder=question.question}}
      <span class="one columns">&nbsp;</span>
    </div>

    {{input type="hidden" value=false id="complete"}}<br>
    <span class="one columns">&nbsp;</span>
    <button {{action 'save1'}}>Save</button>

  </form>
{{else}}
  <div class="row">
    <span class="nine columns">&nbsp;</span>
    <button {{action 'updateQuestionForm'}} class="two columns">New</button>
  </div>
{{/if}}
